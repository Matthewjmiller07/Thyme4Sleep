---
import Layout from '../../layouts/Layout.astro';

const pageTitle = 'Standard Sleep Package - Thyme4Sleep';
const pageDescription = 'Our most popular package. Includes a sleep plan, virtual consultation, and 2 weeks of follow-up support.';
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <section class="relative py-20 bg-brandCream overflow-hidden">
    <div class="container mx-auto px-6 relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <a href="/pricing" class="inline-block text-sm font-semibold text-brandSage hover:text-brandChar mb-4 transition-colors">← Back to Packages</a>
        <h1 class="text-4xl md:text-5xl font-light text-brandChar mb-6">Standard <span class="font-medium">Package</span></h1>
        <div class="h-1 w-24 bg-accent mx-auto mb-8"></div>
        <p class="text-xl text-gray-700 max-w-2xl mx-auto">
          Comprehensive support including a consultation and 2 weeks of follow-up guidance to ensure success.
        </p>
      </div>
    </div>
  </section>

  <!-- Package Details Section -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-6 max-w-6xl">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-start">
        <!-- Image Column -->
        <div class="rounded-2xl overflow-hidden shadow-lg border border-gray-100">
          <img 
            src="/images/stock images/T4S Image 5 (1).png" 
            alt="Standard Sleep Package" 
            class="w-full h-auto object-cover"
          />
        </div>

        <!-- Details Column -->
        <div data-addon-scope="standard">
          <h2 class="text-3xl font-light text-brandChar mb-6">What's Included</h2>
          
          <ul class="space-y-4 mb-8">
            <li class="flex items-start">
              <svg class="h-6 w-6 text-brandSage flex-shrink-0 mt-1 mr-3" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              <span class="text-lg text-gray-700">60-minute virtual consult</span>
            </li>
            <li class="flex items-start">
              <svg class="h-6 w-6 text-brandSage flex-shrink-0 mt-1 mr-3" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              <span class="text-lg text-gray-700">Customized sleep plan</span>
            </li>
            <li class="flex items-start">
              <svg class="h-6 w-6 text-brandSage flex-shrink-0 mt-1 mr-3" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              <span class="text-lg text-gray-700">2-week follow-up support</span>
            </li>
            <li class="flex items-start">
              <svg class="h-6 w-6 text-brandSage flex-shrink-0 mt-1 mr-3" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              <span class="text-lg text-gray-700">Email/text during business hours</span>
            </li>
            <li class="flex items-start">
              <svg class="h-6 w-6 text-brandSage flex-shrink-0 mt-1 mr-3" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              <span class="text-lg text-gray-700">Sleep environment assessment</span>
            </li>
          </ul>

          <div class="bg-brandCream/60 border border-brandCream/90 rounded-2xl p-6 mb-8">
            <label for="standard-addon-page" class="text-sm font-semibold text-brandChar tracking-wide uppercase">Optional Week(s) Add-On</label>
            <p class="text-sm text-brandMink mt-1 mb-3">Extend your Standard package with extra Mon–Fri check-ins.</p>
            <select id="standard-addon-page" data-addon-group="standard" class="js-addon-select w-full border border-brandCream rounded-xl px-4 py-3 text-base focus:outline-none focus:ring-2 focus:ring-brandPeach/60 bg-white">
              <option value="">No additional support</option>
              <option value="support-1w">1 Week Additional Support — $100</option>
              <option value="support-2w">2 Weeks Additional Support — $200</option>
              <option value="support-3w">3 Weeks Additional Support — $300</option>
              <option value="support-4w">4 Weeks Additional Support — $400</option>
            </select>
            
            <!-- Add-on only purchase option -->
            <div class="mt-4 pt-4 border-t border-brandCream/70">
              <p class="text-xs text-brandMink mb-2">Already have a Standard package?</p>
              <a href="#" data-addon="support-1w" class="js-addon-only-checkout js-addon-dynamic-button block w-full bg-white/80 hover:bg-white text-brandChar hover:text-brandChar text-center py-2 px-3 rounded-full text-sm font-medium transition-all duration-300 border border-brandCream" data-addon-group="standard">
                Purchase 1 Week Add-On <strong>Only</strong> — $100
              </a>
            </div>
          </div>

          <div class="bg-gray-50 rounded-xl p-8 border border-gray-100">
            <h3 class="text-xl font-bold text-brandChar mb-6">Choose Your Option</h3>
            
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
              <!-- Single Child -->
              <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-100 flex flex-col h-full">
                <div class="mb-4">
                  <span class="text-sm font-semibold text-brandMink uppercase tracking-wider">Single Child</span>
                  <div class="flex items-baseline gap-2 mt-2">
                    <span class="text-3xl font-bold text-brandChar">$549</span>
                    <span class="text-xs bg-brandMint/20 text-brandChar px-2 py-1 rounded-full">Promo</span>
                  </div>
                </div>
                <div class="mt-auto">
                  <a
                    href="#"
                    data-package="standard-1"
                    class="js-checkout block w-full bg-brandPeach hover:bg-brandTaupe text-brandSage hover:text-brandSage text-center py-3 px-4 rounded-full font-bold transition-all duration-300 shadow-sm"
                  >
                    Get Started
                  </a>
                </div>
              </div>

              <!-- Multiple Children -->
              <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-100 flex flex-col h-full">
                <div class="mb-4">
                  <span class="text-sm font-semibold text-brandMink uppercase tracking-wider">Multiple Children</span>
                  <div class="flex items-baseline gap-2 mt-2">
                    <span class="text-3xl font-bold text-brandChar">$749</span>
                    <span class="text-xs bg-brandMint/20 text-brandChar px-2 py-1 rounded-full">Promo</span>
                  </div>
                </div>
                <div class="mt-auto">
                  <a
                    href="#"
                    data-package="standard-2"
                    class="js-checkout block w-full bg-brandPeach hover:bg-brandTaupe text-brandSage hover:text-brandSage text-center py-3 px-4 rounded-full font-bold transition-all duration-300 shadow-sm"
                  >
                    Get Started
                  </a>
                </div>
              </div>
            </div>
          </div>

          <div class="mt-8 text-brandMint flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-5 w-5 mr-2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z" />
            </svg>
            <span class="font-medium">14-day satisfaction guarantee</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <script is:inline src="/scripts/checkout.js"></script>
</Layout>
