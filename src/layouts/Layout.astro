---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const { title = 'Thyme4Sleep - Pediatric Sleep Coaching',
        description = 'Helping babies and children get the rest they need to thrive with personalized sleep coaching.' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script is:inline src="/scripts/theme-switcher.js"></script>
    <script is:inline src="/scripts/popupManager.js"></script>
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    </head>
  <body class="min-h-screen flex flex-col bg-white">
    <!-- International Clients Banner -->
    <div class="bg-brandSage text-center py-2 px-4" style="color: white !important;">
      <p class="text-sm sm:text-base" style="color: white !important;">
        üåç Welcoming families worldwide! Offering virtual sleep consultations to help your little ones sleep better, no matter where you are.
      </p>
    </div>
    <div id="info-popup" class="fixed inset-0 z-[100] hidden items-center justify-center p-4 bg-black/40 backdrop-blur-sm">
      <div class="bg-white rounded-3xl p-8 max-w-md w-full mx-4 shadow-2xl relative overflow-hidden">
        <button
          onclick="closePopup()"
          class="absolute top-4 right-4 text-gray-400 hover:text-brandMink transition-colors"
          aria-label="Close"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>

        <div class="space-y-6">
          <div class="text-center">
            <div class="w-16 h-16 bg-brandPeach/10 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-brandPeach" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
            </div>
            <h3 class="text-2xl font-light text-brandChar mb-2">We've Got You Covered</h3>
            <div class="h-1 w-12 bg-accent mx-auto mb-6"></div>
          </div>

          <div class="space-y-4">
            {/* Satisfaction Guarantee */}
            <div class="flex items-start space-x-3">
              <div class="flex-shrink-0 mt-1">
                <div class="w-8 h-8 rounded-full bg-brandPeach/10 flex items-center justify-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-brandPeach" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                </div>
              </div>
              <div>
                <h4 class="font-medium text-brandChar">14-Day Satisfaction Guarantee</h4>
                <p class="text-sm text-gray-600">Results within 14 days or I keep working with you free of charge.</p>
              </div>
            </div>

            {/* Referral Program */}
            <div class="flex items-start space-x-3">
              <div class="flex-shrink-0 mt-1">
                <div class="w-8 h-8 rounded-full bg-brandPeach/10 flex items-center justify-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-brandPeach" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                </div>
              </div>
              <div>
                <h4 class="font-medium text-brandChar">$50 Referral Bonus</h4>
                <p class="text-sm text-gray-600">Refer a friend and you both receive $50 off your next service!</p>
              </div>
            </div>
          </div>

          <button
            onclick="closePopup()"
            class="w-full mt-6 py-3 px-6 bg-brandPeach hover:bg-brandTaupe text-white font-medium rounded-full transition-colors duration-300"
          >
            Got it, thanks!
          </button>
        </div>

        {/* Decorative Elements */}
        <div class="absolute -bottom-20 -right-20 w-40 h-40 bg-brandPeach/5 rounded-full"></div>
        <div class="absolute -top-10 -left-10 w-20 h-20 bg-brandPeach/5 rounded-full"></div>
      </div>
    </div>

    <header class="sticky top-0 z-50 bg-white/80 backdrop-blur-md shadow-sm">
      <div class="container mx-auto px-6 py-4">
        <div class="flex items-center justify-between">
          <a href="/" class="flex items-center">
            <img src="/images/logos/T4S ROUND LOGO.png" alt="Thyme4Sleep" class="h-24 w-auto" />
          </a>

          <nav class="hidden md:flex items-center space-x-10">
            <a href="/" class="text-brandChar hover:text-brandMink transition-colors font-medium">Home</a>
            <a href="/about" class="text-brandChar hover:text-brandMink transition-colors font-medium">About</a>
            <a href="/testimonials" class="text-brandChar hover:text-brandMink transition-colors font-medium">Testimonials</a>
            <a href="/pricing" class="text-brandChar hover:text-brandMink transition-colors font-medium">Pricing</a>
            <a href="/contact" class="text-brandChar hover:text-brandMink transition-colors font-medium">Intake Form</a>
            <a href="https://calendly.com/d/cv24-pmt-pqq/15-minute-free-consultation"
                target="_blank"
                rel="noopener noreferrer"
                class="bg-brandChar text-white hover:bg-brandMink px-6 py-2.5 rounded-full transition-colors font-medium">
              Book Free Call
            </a>
          </nav>

          <button class="md:hidden p-2" id="mobile-menu-button" aria-label="Menu">
            <svg class="w-6 h-6 text-brandChar" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>
      </div>

      <div class="md:hidden hidden bg-white border-t border-gray-100" id="mobile-menu">
        <div class="px-6 py-4 space-y-4">
          <a href="/" class="block py-2 text-brandChar hover:text-brandMink transition-colors font-medium">Home</a>
          <a href="/about" class="block py-2 text-brandChar hover:text-brandMink transition-colors font-medium">About</a>
          <a href="/testimonials" class="block py-2 text-brandChar hover:text-brandMink transition-colors font-medium">Testimonials</a>
          <a href="/pricing" class="block py-2 text-brandChar hover:text-brandMink transition-colors font-medium">Pricing</a>
          <a href="/contact" class="block py-2 text-brandChar hover:text-brandMink transition-colors font-medium">Intake Form</a>
          <a href="https://calendly.com/d/cv24-pmt-pqq/15-minute-free-consultation"
              target="_blank"
              rel="noopener noreferrer"
              class="block w-full text-center bg-brandChar text-white hover:bg-brandMink px-6 py-2.5 rounded-full transition-colors font-medium mt-4">
            Book Free Call
          </a>
        </div>
      </div>
    </header>

    <main class="flex-grow">
      <slot />
    </main>

    <footer class="bg-brandCream py-12 mt-16">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div>
            <h3 class="text-xl font-bold mb-4">Thyme4Sleep</h3>
            <p class="text-gray-600">Pediatric Sleep Coaching by Georgia Miller</p>
          </div>
          <div>
            <h4 class="font-bold mb-4">Quick Links</h4>
            <ul class="space-y-2">
              <li><a href="/about" class="text-gray-600 hover:text-accent">About Me</a></li>
              <li><a href="/testimonials" class="text-gray-600 hover:text-accent">Testimonials</a></li>
              <li><a href="/pricing" class="text-gray-600 hover:text-accent">Pricing</a></li>
              <li><a href="/contact" class="text-gray-600 hover:text-accent">Contact</a></li>
            </ul>
          </div>
          <div>
            <h4 class="font-bold mb-4">Contact</h4>
            <p class="text-gray-600">Email: <a href="mailto:georgia@thyme4sleep.com" class="hover:text-accent">georgia@thyme4sleep.com</a></p>
          </div>
        </div>
        <div class="border-t border-gray-200 mt-8 pt-8 text-center text-gray-500 text-sm">
          <p>&copy; {new Date().getFullYear()} Thyme4Sleep. All rights reserved.</p>
        </div>
      </div>
    </footer>

    <script>
      // Mobile menu toggle
      document.getElementById('mobile-menu-button')?.addEventListener('click', function() {
        const menu = document.getElementById('mobile-menu');
        if (menu) {
          menu.classList.toggle('hidden');
        }
      });
    </script>
  </body>
</html>